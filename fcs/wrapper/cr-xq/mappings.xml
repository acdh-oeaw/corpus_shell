<?xml version="1.0" encoding="UTF-8"?>
<map>
    <map key="default">
        <!-- very bad idea to give * as default PLUS default base-elem !!! 
        <index key="cql.serverChoice" base_elem="*">*</index>
        -->
        <index key="cql.serverChoice" base_elem="p">*</index>
        <index key="fcs.resource" type="explicit"/>
        <index key="cmd.collection" base_elem="CMD" type="explicit" status="indexed">MdSelfLink</index>
    </map>
    <map key="clarin.at:icltt:cr:stb" path="/db/cr-data/stb" base_elem="div[@type='diary-day']">
        <index status="indexed" key="cql.serverChoice">p</index>
        <index key="diary-day" use="xs:string(@value)">div[@type='diary-day']/p/date</index>
        <index key="diary-month" use="substring(xs:string(@value),1,7)">div[@type='diary-day']/p/date</index>
        <index key="diary-year" use="substring(xs:string(@value),1,4)">div[@type='diary-day']/p/date</index>
        <index key="text">div[@type='diary-day']</index>
        <index status="indexed" key="personName">persName</index>
        <index key="persId" use="xs:string(@xml:id)">persName</index>
    </map>
    <map key="clarin.at:icltt:cr:aac-names" path="/db/cr-data/aac_names" base_elem="tei:person">
        <index key="cql.serverChoice">*</index>
        <index key="personName" status="indexed">tei:persName</index>
        <index key="occupation">tei:occupation</index>
        <index key="sex">tei:sex</index>
        <index key="birth-place">tei:birth/tei:placeName</index>
        <index key="death-place">tei:death/tei:placeName</index>
        <index key="birth-date" use="xs:string(@when)">tei:birth</index>
        <index key="death-date" use="xs:string(@when)">tei:death</index>
        <index key="diary-day" use="@target">tei:link</index>  <!-- which persons, occurred in which diary day  -->
    </map>
    <map key="clarin.at:icltt:cr:barock" path="/db/cr-data/barock" base_elem="p">
        <index key="cql.serverChoice">*</index>
        <index key="ref">rs</index>
    </map>
    <map key="clarin.eu:mdrepo" path="/db/mdrepo-data" base_elem="CMD">
        <index key="cql.serverChoice">*</index>
        <index key="cmd.collection" base_elem="CMD" type="explicit" status="indexed">MdSelfLink</index>
    </map>
</map>