<?xml version="1.0" encoding="UTF-8"?>
<info xml:lang="en">
    <h2>Test suite - FCS HTML-views</h2>
    <div>
        <test id="scan-fcs-resource">
            <a class="request" href="?operation=scan&amp;scanClause=fcs.resource&amp;x-format=htmlpage&amp;version=1.2">scan: fcs.resource htmlpage</a>
            <xpath key="contains html-heading">exists($result-data//xhtml:h1/text())</xpath>
            <xpath key="heading">$result-data//xhtml:h1/text()</xpath>
            <xpath key="count terms">count($result-data//div[@class='content']/table/tr)</xpath>
        </test>
        <test id="search">
            <a class="request" href="?operation=searchRetrieve&amp;query=ich&amp;x-context=clarin.at%3Aicltt%3Addc%3Abarock&amp;x-format=html&amp;version=1.2">search: ich in barock [html]</a>
            <xpath key="table-rows">count($result-data//table/tbody/tr)</xpath>
            <xpath key="numberOfRecords">$result-data//div[@class='result-header']/xs:string(@data-numberOfRecords)</xpath>
            <xpath key="numberOfRecords-true">number($result-data//div[@class='result-header']/xs:string(@data-numberOfRecords))=number($result-data//div[@class='result-header']/xs:string(@data-numberOfRecords))</xpath>
            <xpath key="contains full-path">($result-data//div[@class='data-view
                full'])[1]/a/xs:string(@href)</xpath>
            <xpath key="contains image-path">($result-data//div[@class='data-view
                image'])[1]/a/xs:string(@href)</xpath>
        </test>
    </div>
</info>