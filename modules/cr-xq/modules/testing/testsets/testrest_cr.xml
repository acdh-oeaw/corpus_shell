<?xml version="1.0" encoding="UTF-8"?>
<info xml:lang="en">
    <div class="title">Test content-repository</div>
    <div>
        <test id="list-projects">
            <a class="request" href="">entry page</a>
            <xpath key="root-elem">$result-data//httpclient:body/*/name()</xpath>
        </test>
        <test id="project-dict-gate">
            <a class="request" href="dict-gate/">dict-gate entry page</a>
            <xpath key="root-elem">$result-data//httpclient:body/*/name()</xpath>
            <xpath key="site-name">$result-data//*[@id='site-name']//text()</xpath>
            <xpath key="has site-name 'Dictionary Gate'">$result-data//*[@id='site-name']//text()=
                'Dictionary Gate'</xpath>
            <xpath key="welcome">$result-data//*[@id='welcome']//text()</xpath>
        </test>
        <test id="project-dict-gate-search">
            <a class="request" href="dict-gate/index.html?query=Haus">dict-gate search Haus</a>
            <xpath key="root-elem">$result-data//httpclient:body/*/name()</xpath>
            <!--            <div class="result-header" data-numberofrecords="3">-->
            <xpath key="namespace">$result-data//httpclient:body/*/namespace-uri()</xpath>
            <xpath key="has numberOfRecords-attr">exists($result-data//*[@class='result-header']/@data-numberOfRecords)</xpath>
            <xpath key="numberOfRecords-attr">$result-data//*[@class='result-header']/xs:string(@data-numberOfRecords)</xpath>
            <xpath key="result-header">$result-data//*[@class='result-header']//text()</xpath>
        </test>
        <test id="project-dict-gate-search-fcs">
            <a class="request" href="dict-gate/fcs?query=Haus&amp;x-format=xml">dict-gate search
                Haus fcs</a>
            <xpath key="root-elem">$result-data//httpclient:body/*/name()</xpath>
            <xpath key="has sru:numberOfRecords">exists($result-data//sru:numberOfRecords)</xpath>
            <xpath key="sru:numberOfRecords">$result-data//sru:numberOfRecords</xpath>
        </test>
        <test id="project-dict-gate-get">
            <a class="request" href="dict-gate/get/at.icltt.cr.dict-gate.1">dict-gate get resource
                id='at.icltt.cr.dict-gate.1'</a>
            <xpath key="root-elem">$result-data//httpclient:body/*/name()</xpath>
            <xpath key="namespace">$result-data//httpclient:body/*/namespace-uri()</xpath>
            <xpath key="root-elem is TEI">exists($result-data//httpclient:body/TEI)</xpath>
            <xpath key="numberOfRecords">$result-data//httpclient:body/*/xs:string(@xml:id)</xpath>
        </test>
        <test id="cr-get">
            <a class="request" href="get/at.icltt.cr.dict-gate.1">default get resource
                id='at.icltt.cr.dict-gate.1'</a>
            <xpath key="root-elem">$result-data//httpclient:body/*/name()</xpath>
            <xpath key="namespace">$result-data//httpclient:body/*/namespace-uri()</xpath>
            <xpath key="root-elem is TEI">exists($result-data//httpclient:body/TEI)</xpath>
            <xpath key="root-xml:id">$result-data//httpclient:body/*/xs:string(@xml:id)</xpath>
        </test>
        <test id="cr-get">
            <a class="request" href="get/at.icltt.cr.dict-gate.1.cmd">default get metadata (as
                resource) id='at.icltt.cr.dict-gate.1.cmd'</a>
            <xpath key="root-elem">$result-data//httpclient:body/*/name()</xpath>
            <xpath key="namespace">$result-data//httpclient:body/*/namespace-uri()</xpath>
            <xpath key="namespace is cmd">$result-data//httpclient:body/*/namespace-uri() =
                'http://www.clarin.eu/cmd/'</xpath>
            <xpath key="root-elem is CMD">exists($result-data//httpclient:body/*[local-name()='CMD'])</xpath>
            <xpath key="root-xml:id">$result-data//httpclient:body/*/xs:string(@xml:id)</xpath>
        </test>
    </div>
</info>