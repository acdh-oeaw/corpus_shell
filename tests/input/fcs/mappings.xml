            <path>MdSelfLink</path>
        </index>
        <index key="resource-pid">
            <path>'clarin.at:icltt:cr'</path>
        </index>
    </map>
    <map key="clarin.at:icltt:cr:abacus" title="Abacus" path="/db/cr-data/abacus_2012_10" base_elem="p">
