    <map key="univie.at:cpas" title="CPAS" path="/db/cr-data/cpas" base_elem="">
        <index key="text">
            <path>tei:bibl</path>
            <path>tei:event</path>
            <path>tei:person</path>
            <path>tei:place</path>
            <path>tei:div</path>
